<div class="mt-4">
    <h1 class="text-center">Create Course</h1>
    <form method="POST" action="/course/store" enctype="multipart/form-data">
        <div class="mb-3 mt-1">
            <label for="name" class="form-label">Course Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <input class="form-control" type="text" name="slug" id="slug" hidden>


        <div class="mb-3 mt-1">
            <label for="decription" class="form-label">Course Description</label>
            <textarea class="form-control" id="decription" name="decription" rows="3" required></textarea>
        </div>

        <div class="mb-3 mt-1">
            <label for="img_courses" class="form-label">Course Image</label>
            <input class="form-control" type="file" name="img_courses" id="img" required>
        </div>

        <button type="submit" class="btn btn-primary">Create Course</button>
    </form>
    <script>
        const nameInput = document.getElementById('name');
        const slugInput = document.getElementById('slug');

        nameInput.addEventListener('input', function () {
            const value = nameInput.value;

            const slug = value
                .toLowerCase()
                .normalize('NFD') // tách ký tự có dấu
                .replace(/[\u0300-\u036f]/g, '') // xoá dấu (diacritics)
                .replace(/[^a-z0-9\s-]/g, '-') // thay ký tự đặc biệt (.,?) bằng -
                .replace(/\s+/g, '-')         // thay khoảng trắng bằng -
                .replace(/-+/g, '-')          // loại bỏ nhiều dấu - liên tiếp
                .replace(/^-+|-+$/g, '');     // xoá dấu - ở đầu/cuối

            slugInput.value = slug;
        });
    </script>


</div>