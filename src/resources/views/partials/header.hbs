            <div class="app-navbar-item row align-items-center gx-4 w-100">
                <!-- Cột trái: Logo -->
                <div class="col-12 col-lg-2 d-flex justify-content-start mb-3 mb-lg-0">
                    <a href="/" class="d-flex align-items-center me-2">
                    <img alt="Logo" src="https://preview.keenthemes.com//metronic8/demo28/assets/media/logos/demo-28-small.svg" class="h-20px d-sm-none d-inline theme-light-show" />
                    <img alt="Logo" src="https://preview.keenthemes.com//metronic8/demo28/assets/media/logos/demo-28.svg" class="h-20px h-lg-25px theme-light-show d-none d-sm-inline" />
                    <img alt="Logo" src="https://preview.keenthemes.com//metronic8/demo28/assets/media/logos/demo-28-dark.png" class="h-20px h-lg-25px theme-dark-show" />
                    </a>
                </div>
                <!-- Cột giữa: Tìm kiếm -->
                <div class="col-12 col-lg-8 d-flex justify-content-center mb-3 mb-lg-0">
                    <form action="/search" method="GET" class="w-100">
                        <div class="input-group w-100 rounded-pill overflow-hidden">
                            <!-- Icon kính lúp bên trái -->
                            <span class="input-group-text bg-light border-0">
                            <i class="fa-solid fa-magnifying-glass text-muted"></i>
                            </span>
                            <!-- Ô nhập -->
                            <input type="text" name="q" class="form-control form-control-solid border-0" placeholder="Tìm kiếm sản phẩm..." />
                            <!-- Nút tìm kiếm -->
                            <button type="submit" class="btn btn-outline-success">
                            Tìm kiếm
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Cột phải: Giỏ hàng -->
                <div class="col-12 col-lg-2 d-flex justify-content-end">
                    <a href="/cart" class="btn btn-custom btn-color-gray-600 btn-active-light position-relative d-flex align-items-center">
                        <i class="fa-solid fa-cart-shopping fa-lg"></i> 
                        <!-- Badge số lượng -->
                        <span class="position-absolute top-0 start-100 translate-middle badge badge-circle bg-primary fs-8">
                        0
                        </span>
                    </a>
                </div>
            </div>
            <!--end::Header secondary-->
        </div>
        <!--end::Header secondary container-->
    </div>
