<h1>Danh sách khóa học</h1>
<div class="mt-2">
  <div class="row">
    <div class="col-sm-6 col-lg-4">
      {{#each courses}}

      <div class="card mt-3">
        <a href="/course/{{slug}}">
          <img src="{{img_courses}}" class="card-img-top" alt="{{name}}">
        </a>
        <div class="card-body">
          <a href="/course/{{slug}}"> 
            <h5 class="card-title">{{name}}</h5>
          </a>
          <p class="card-text">{{description}}</p>
          <a href="/course/{{slug}}" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>

      {{/each}}
    </div>
  </div>
</div>